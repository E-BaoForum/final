<h3>Sign Up</h3>
<% if @user.errors.any? %>
  <ul class="errors">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag "/users" do %>

  <p>
    <%= label_tag :user_name %>
    <%= text_field_tag :user_name %>
  </p>

  <p>
    <%= label_tag :password %>
    <input id="password" type="password" name="password">
  </p>

  <p>
    <%= label_tag :real_name %>
    <%= text_field_tag :real_name %>
  </p>

  <p>
    <%= label_tag :address %>
    <%= text_field_tag :address %>
  </p>

  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :gender %>
    <%= text_field_tag :gender %>
  </p>

  <%= submit_tag "Sign Me Up!" %>
<% end %>